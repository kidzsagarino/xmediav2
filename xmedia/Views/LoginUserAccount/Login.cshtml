
@{
    ViewBag.Title = "Login Page";
    Layout = "~/Views/Shared/_LayoutSubProducts.cshtml";
}


<div class="login-container">
    <form class="js-login-form" autocomplete="off">
        <div class="form-group">
            <label>Email: </label>
            <input type="text" name="Email" value="" />
        </div>
        <div class="form-group">
            <label>Password: </label>
            <input type="password" name="Password" value="" />
        </div>
        <div class="form-group forgot-password-btn">
            <a href="@Url.Action("ForgotPassword", "LoginUserAccount")">Forgot Password?</a>
        </div>
        <div class="form-footer">
            <button type="button" class="js-loginBtn loginBtn">Login</button>
        </div>
        <div class="form-footer sign-up-container">
            <small>Don't have an account?</small> <br />
            <a href="@Url.Action("SignUp", "LoginUserAccount")" class="signUpBtn js-signupBtn">Sign Up</a>
            @*<button type="button" class="signUpBtn js-signupBtn"></button>*@
        </div>
    </form>
</div>



@section Title{
    <h1 class="prodDetsCont-title">Login</h1>
}


@section JS {

    <script src="~/Scripts/LoginUserAccount/login.js"></script>    
}