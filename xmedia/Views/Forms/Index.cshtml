
@model BusinessRef.ModelObject.Forms.GetPurchaseOrderFormsInitialDataModel

@{
    ViewBag.Title = "Forms Page";
    Layout = "~/Views/Shared/_LayoutSubProducts.cshtml";
}

<div class="prodDets-cont-00">
    <div class="prodDetsCont-divCont-01-images">
        <div class="purchase-order-form-container">
            @{Html.RenderPartial("~/Views/Forms/PurchaseOrder/PurchaseOrder1.cshtml");}
        </div>
        <div class="form-thumbnails">
            thumbnails here
        </div>
    </div>
    <div class="prodDetsCont-divCont-01-config">
        <div class="prodDetsCont-divCont-02-config-title">
            <h2 class="prodDetsCont-divCont-03-config-title">Details &amp; Cost </h2>
        </div>
        <form action="#" class="js-prod-form prod-form">
            <div class="prodDetsCont-divCont-02-config-po">
                <div class="prodDetsCont-divCont-02-config">
                    <h4 class="prodDets-config-label">Select Size</h4>
                    <select class="prodDets-config-select js-paperSize-select" required>
                        <option value="0">Select</option>
                        @foreach (var item in Model.FormAssignedSizes)
                        {
                            <option value="@item.FormSizeID" data-DivisorFactor="@item.DivisorFactor" data-LaborFactor="@item.LaborFactor">@item.PaperSize</option>
                        }
                    </select>
                    <i class="prodDetsCont-icon-checked"><img src="~/images/icon/checked-green.png" /></i>
                </div>
                <div class="prodDetsCont-div-02-custom0 js-custom-dimension" style="display: none">
                    <h4>Custom dimension?</h4>
                    <div class="prodDetsCont-div-02-custom">
                        <input placeholder="width" />
                        <input placeholder="heigth" />
                    </div>
                </div>
            </div>

            <div class="prodDetsCont-divCont-02-config">
                <h4 class="prodDets-config-label">Select Paper </h4>
                <select class="prodDets-config-select js-paperType-select" required>
                    <option value="0">Select</option>
                    @foreach (var item in Model.FormPaperTypes)
                    {
                        <option value="@item.ID" data-paperCost="@item.PaperCostAtA3" data-laborCost="@item.LaborCostAtA3" data-PrintCostBW="@item.PrintingCostAtA3BW" data-PrintCostColored="@item.PrintingCostAtA3Colored">
                            @item.PaperType - @item.Thickness
                        </option>
                    }
                </select>
                <i class="prodDetsCont-icon-checked"><img src="~/images/icon/checked-green.png" /></i>
            </div>

            <div class="prodDetsCont-divCont-02-config">
                <h4 class="prodDets-config-label">No. of Duplicates </h4>
                <select class="prodDets-config-select js-no-ofDuplicates" disabled>
                    <option value="0" data-value="1">No Duplicates</option>
                    <option value="1" data-value="2">1</option>
                    <option value="2" data-value="3">2</option>
                    <option value="3" data-value="4">3</option>
                    <option value="4" data-value="5">4</option>
                    <option value="5" data-value="6">5</option>
                    <option value="6" data-value="7">6</option>
                </select>
                <i class="prodDetsCont-icon-checked"><img src="~/images/icon/checked-green.png" /></i>
            </div>

            <div class="duplicate-color-container js-duplicate-container">
                <!--<div class="duplicate-container">
            <div class="duplicate-header">
                <p>Original</p>
            </div>
            <div class="duplicate-content">
