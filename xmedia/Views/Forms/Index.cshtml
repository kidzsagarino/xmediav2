                <label>Paper Type</label>
                <select class="duplicatePaperType-select"></select>
                <small class="js-unitCost-label unitCost-label">Unit Cost:</small>-->
                @*<small class="js-unitCost-value unitCost-value">Php 1.00</small>*@
                <!--<input type="text" name="duplicate-unitCost" class="unitCost-value" value="Php 1.00"/>
            </div>
        </div>-->
            </div>

            <div class="prodDetsCont-divCont-02-config">
                <h4 class="prodDets-config-label">Select Print Color </h4>
                <select class="prodDets-config-select js-printcolor-select" required>
                    <option value="0">Select</option>
                    @foreach (var item in Model.FormPrintColors)
                    {
                        <option value="@item.ID">@item.PrintColor</option>
                    }

                </select>
                <i class="prodDetsCont-icon-checked"><img src="~/images/icon/checked-green.png" /></i>
            </div>
            <div class="prodDetsCont-divCont-02-config">
                <h4 class="prodDets-config-label">With Padding Glue </h4>
                <select class="prodDets-config-select js-padding-select" required>
                    <option value="0">Select</option>
                    <option value="1">No</option>
                    <option value="2">Yes</option>
                </select>
                <i class="prodDetsCont-icon-checked"><img src="~/images/icon/checked-green.png" /></i>
            </div>
            <div class="padding-color-container js-paddingGlue-container">
                @*<div class="padding-container">
                    <label>No of Set Per Pad</label>
                    <select class="duplicateColor-select js-no-ofSet-perPad">
                        <option value="100">100</option>
                        <option value="200">200</option>
                        <option value="300">300</option>
                        <option value="400">400</option>
                        <option value="500">500</option>
                        <option value="600">600</option>
                        <option value="700">700</option>
                        <option value="800">800</option>
                        <option value="900">900</option>
                        <option value="100">1000</option>
                    </select>
                </div>
                <div class="padding-container">
                    <label>Which Side ?</label>
                    <select class="duplicateColor-select js-padSide">
                        <option value="1">Short Side</option>
                        <option value="2">Long Side</option>
                    </select>
                </div>*@
            </div>
            <div class="prodDetsCont-divCont-02-configPrice">
                <div class="prodDetsCont-divCont-03-configPrice">
                    <h4 class="prodDets-config-price-label">Quantity : </h4>
                    <select class="prodDets-config-select-quantity js-paperQuantity-select" required>
                        <option value="0">Select</option>
                        @foreach (var item in Model.FormQuantities)
                        {
                            <option value="@item.ID" data-quantityFactor="@item.QuantityFactor">@item.FormQuantity</option>
                        }
                    </select>
                </div>
                <div class="prodDetsCont-divCont-03-configPrice">
                    <h4 class="prodDets-config-price-label">Unit Price : </h4>
                    <input class="prodDets-unitPrice-input js-prod-unitPrice" value="" disabled />
                </div>
                <div class="prodDetsCont-divCont-03-configPrice">
                    <h4 class="prodDets-config-price-label">Total Price : </h4>
                    <input class="prodDets-totalPrice-input js-prod-totalPrice" disabled value="" />
                </div>
            </div>

            <div class="prodDets-submitButton">
                <button class="submitBtn js-submitBtn" type="button">Proceed to Order</button>
            </div>

        </form>
        
    </div>
</div>

@section Uri{
    <h5 class="prodDetsCont-uri">X-Media| Stickers | Purchase Order Forms</h5>
