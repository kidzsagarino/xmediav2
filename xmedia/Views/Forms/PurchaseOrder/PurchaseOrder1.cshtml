<table class="purchase-order-table">
    <colgroup>
        <col width="11" />
        <col width="46" />
        <col width="11" />
        <col width="10" />
        <col width="5" />
        <col width="14" />
        <col width="23" />
    </colgroup>

    <thead>
        <tr>
            <td colspan="4"></td>
            <td class="border-left"></td>
            <td></td>
            <td style="background: #6d6e71; color: #fff; text-align: center">
                M-1501
            </td>
        </tr>
        <tr>
            <td colspan="4">
                LOGO / COMPANY NAME
            </td>
            <td class="border-left"></td>
            <td>
                P.O. No:
            </td>
            <td>
                <input type="text" name="PONumber" disabled/>
            </td>
        </tr>
        <tr>
            <td colspan="4">
                <small>COMPANY ADDRESS</small>
            </td>
            <td class="border-left"></td>
            <td>
                Cust ID:
            </td>
            <td>
                <input type="text" name="CustomerID" disabled/>
            </td>
        </tr>
        <tr>
            <td colspan="4"></td>
            <td class="border-left"></td>
            <td>
                Date:
            </td>
            <td>
                <input type="text" name="Date" disabled/>
            </td>
        </tr>
        <tr>
            <td colspan="7" class="border-top"></td>
        </tr>
        <tr>
            <td colspan="7" height="35" style="text-align:center; font-size:20px">
                PURCHASE ORDER
            </td>
        </tr>
        <tr>
            <td colspan="7" class="border-top"></td>
        </tr>
        <tr>
            <td colspan="2" style="font-size: 15px; background: #d1d2d4;">
                VENDOR
            </td>
            <td colspan="5" style="font-size: 15px; background: #d1d2d4;" class="border-left">
                SHIP TO
            </td>
        </tr>
        <tr>
            <td colspan="7" class="border-top"></td>
        </tr>
        <tr>
            <td style="font-size:13px;">Name:</td>
            <td>
                <input type="text" name="VendorName" />
            </td>
            <td style="font-size:13px">Name:</td>
            <td colspan="4">
                <input type="text" name="CustomerName" />
            </td>
        </tr>
        <tr>
            <td style="font-size:13px;">Company:</td>
            <td>
                <input type="text" name="VendorCompanyName" />
            </td>
            <td style="font-size:13px">Company:</td>
            <td colspan="4">
                <input type="text" name="CustomerCompanyName" />
            </td>
        </tr>
        <tr>
            <td style="font-size:13px;">Address:</td>
            <td>
                <input type="text" name="VendorAddress" />
            </td>
            <td style="font-size:13px">Address:</td>
            <td colspan="4">
                <input type="text" name="CustomerAddress" />
            </td>
        </tr>
        <tr>
            <td style="font-size:13px;">Cel No:</td>
            <td>
                <input type="text" name="VendorCelNo" />
            </td>
            <td style="font-size:13px">Cel No:</td>
            <td colspan="4">
                <input type="text" name="CustomerCelNo" />
            </td>
        </tr>
        <tr>
            <td style="font-size:13px;">Tel No:</td>
            <td>
                <input type="text" name="VendorTelNo" />
            </td>
            <td style="font-size:13px">Tel No:</td>
            <td colspan="4">
                <input type="text" name="CustomerTelNo" />
            </td>
        </tr>
        <tr>
            <td colspan="7" height="15"></td>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td colspan="7" class="border-top"></td>
        </tr>
        <tr>
            <td class="purchase-order-header">
                ITEM NO
            </td>
            <td class="purchase-order-header">
                DESCRIPTION
            </td>
            <td class="purchase-order-header">
                UNITS
            </td>
            <td class="purchase-order-header">
                QTY
            </td>
            <td class="purchase-order-header" colspan="2">
                UNIT PRICE
            </td>
            <td class="purchase-order-header no-border-right">
                AMOUNT
            </td>
        </tr>
        <tr>
            <td colspan="7" class="border-top"></td>
        </tr>

        @for (int i = 0; i < 10; i++)
        {
            <tr>
                <td class="border-right" height="30"></td>
                <td class="border-right" height="30"></td>
                <td class="border-right" height="30"></td>
                <td class="border-right" height="30"></td>
                <td colspan="2" class="border-right" height="30"></td>
                <td class="border-right" height="30"></td>
            </tr>
            <tr>
                <td colspan="7" class="border-bottom"></td>
            </tr>
        }

        <tr>
            <td colspan="7" class="border-top"></td>
        </tr>
        <tr>
            <td colspan="3" height="25"></td>
            <td colspan="3" style="font-size:13px; text-align:right">Amount >></td>
            <td class="border-left"></td>
        </tr>
        <tr>
            <td colspan="7" class="border-top"></td>
        </tr>
        <tr>
            <td colspan="3" height="25"></td>
            <td colspan="3" style="font-size:13px; text-align:right">12% VAT >></td>
            <td class="border-left"></td>
        </tr>
        <tr>
            <td colspan="3" height="25"></td>
            <td colspan="3" style="font-size:13px; text-align:right">Total Amount >></td>
            <td class="border-left"></td>
        </tr>
        <tr>
            <td colspan="7" class="border-top"></td>
        </tr>
    </tbody>
    <tfoot>

        <tr>
            <td colspan="7" height="40"></td>
        </tr>
        <tr>
            <td colspan="3" style="font-size:14px;">PREPARED BY:</td>
            <td colspan="4" style="font-size:14px;">APPROVED BY:</td>
        </tr>

        <tr>
            <td colspan="7" height="10"></td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="text" name="PreparedBy" />
            </td>
            <td></td>
            <td colspan="4">
                <input type="text" name="ApprovedBy"/>
            </td>
        </tr>

        <tr>
            <td colspan="7" height="15"></td>
        </tr>

    </tfoot>
</table>