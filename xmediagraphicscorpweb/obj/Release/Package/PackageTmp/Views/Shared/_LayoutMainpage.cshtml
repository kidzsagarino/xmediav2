@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_LayoutMainpage</title>
    <link href="~/Css/_LayoutMainpageCss.css" rel="stylesheet" />
    <script src="~/Plugins/fontawesome-pro-5.15.4-web/fontawesome-pro-5.15.4-web/js/all.js"></script>
</head>
<body>
    <nav class="nav01">
        <div class="nav01-divContainer-01-top">
            <div class="nav01-divContainer-02-top">
                <div class="nav01-divContainer-03-xmediaLogo">
                    <img src="~/images/xmedia-logo.png" />
                </div>
                <div class="nav01-divContainer-03-hotline">
                    <h4>Tel No. 032 272 3456</h4>
                    <h4>Customer quality Hotline</h4>
                </div>
                <div class="nav01-divContainer-03-search">
                    <div class="nav01-divContainer-04-search">
                        <input placeholder="Search" />
                        <div class="nav01-divContainer-05-search">
                            <img src="~/images/icon/search.png" />
                        </div>
                    </div>
                </div>
                <div class="nav01-divContainer-03-signin">
                    <a href="#">Sign-in</a>
                    <h4>My Account</h4>
                </div>
                <div class="nav01-divContainer-03-cart">
                    <img src="~/images/icon/shopping-cart.svg" />
                </div>

            </div>
        </div>
        <div class="nav01-divContainer-01-bot">
            <div class="nav01-divContainer-02-bot">
                <button class="nav01-divContainer-01-bot-button js-nav01-button">Stickers &amp; Labels</button>
                <div class="nav01-divContainer-03-bot-menuDisplay js-nav01-menuDisplay "><h3>Stickers &amp; Labels</h3></div>
                <button class="nav01-divContainer-01-bot-button js-nav01-button">Signage &amp; Banners</button>
                <div class="nav01-divContainer-03-bot-menuDisplay js-nav01-menuDisplay"><h3>Signage &amp; Banners</h3></div>
                <button class="nav01-divContainer-01-bot-button js-nav01-button">Apparel &amp; Accessories</button>
                <div class="nav01-divContainer-03-bot-menuDisplay js-nav01-menuDisplay"><h3>Apparel &amp; Accessories</h3></div>
                <button class="nav01-divContainer-01-bot-button js-nav01-button">Marketing &amp; Visuals</button>
                <div class="nav01-divContainer-03-bot-menuDisplay js-nav01-menuDisplay"><h3>Marketing &amp; Visuals</h3></div>
            </div>

        </div>
    </nav>
    <content class="content01">
        @RenderBody()
    </content>
    <footer class="footer01">
    </footer>
    <script src="~/Scripts/Shared/_LayoutMainpage.js"></script>
</body>
</html>
